<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundDashboard"
    android:theme="@style/Theme.MyApp"
    tools:context=".DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/jadwal_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorBackgroundHalaman"
            android:theme="@style/ThemeToolbar">

        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBackgroundHalaman"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            >

            <LinearLayout
                android:id="@+id/icon_jadwal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_logo"
                android:padding="13dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kalender"
                    android:alpha="0.6"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/icon_jadwal"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/senin"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackgroundCircleLogo"
                    />

                <View
                    android:id="@+id/jadwal_dokter"
                    android:layout_width="120dp"
                    android:layout_height="4dp"
                    android:background="@color/colorBackgroundCircleLogo"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_list"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_logo"
                android:src="@drawable/ic_profile"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dr. Sintya Dewi"
                    android:alpha="0.7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/icon_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_clock"
                        android:text="10.00 AM - 13.00 PM"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="10dp"


                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_list"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_logo"
                android:src="@drawable/ic_profile"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dr. Sabrina"
                    android:alpha="0.7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/icon_clock2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_clock2"
                        android:text="10.00 AM - 13.00 PM"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="10dp"


                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>

</ScrollView>